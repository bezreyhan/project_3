<body class="logInPage">

<h1 id="title"><u>Paired</u></h1>

<div>
    <%= form_for @user, {url:"/auths", method:"post"} do |u| %>
        <div class="row">
            <div class="small-12 medium-6 large-4 columns">
                <label> Email:<br />
                    <%= u.text_field :email, :placeholder => "Enter your email" %>
                </label>
            </div>
        </div>


        <div class="row">
            <div class="small-12 medium-6 large-4 columns">
                <label> Password:<br />
                    <%= u.password_field :password, :placeholder => "Enter your password" %>
                </label>
            </div>
        </div>

        
        <div>
            <%= u.submit "Log in" %> | <%= link_to "LinkedIn", "/auth/linkedin" %> <br /> 
            <%= link_to "Sign up", new_user_path %> 
        </div>
    <% end %>
</div>
