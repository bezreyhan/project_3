<%= render partial: '/layouts/navbar' %>


<h1 id="title"><u>My Profile</u></h1>

<%= render template: "user_interests/new" %>

<h1><%=current_user.first_name %>'s languages and skill levels</h1>
<!-- where else could this logic be done?  -->


<% unless @user_interests == nil %>
    <div>
        <% @user_interests.each do |ui| %>
            <%= Interest.find_by(id: ui.interest_id).name %> 
            <%= ui.skill_level %>
            <%= button_to "Delete", ui, method: :delete, class: "button tiny alert"%>
            <br>
        <% end %> 
        <br>
        <br>
    </div> 
<% end %> 



<div>
    <%= form_for @user, :url => user_path, :html => { :multipart => true } do |u|%>
        <%= render partial: '/layouts/error_messages' %>
        <div class="row">
            <div class="small-12 medium-6 large-4 columns">
                <label>First name:<br /><small>Required</small>
                    <%= u.text_field :first_name, :placeholder => "Enter your first name" %>
                </label>
                <!-- <small class="error">Please enter your first name.</small> -->
            </div>
        </div>


    
        <div class="row">
            <div class="small-12 medium-6 large-4 columns">
                <label>Last name:<br /><small>Required</small>
                    <%= u.text_field :last_name, :placeholder => "Enter your last name" %>
                </label>
                <!-- <small class="error">Please enter your last name.</small> -->
            </div>

        </div>
        

        <div class="row">
            <div class="small-12 medium-6 large-4 columns">
                <label>Username:<br />
                    <%= u.text_field :username, :placeholder => "Enter your username" %>
                </label>
            </div>
        </div>
        
        <div class="row">
            <div class="small-12 medium-6 large-4 columns">
                <label> Photo:<br /><small>required</small>
                    <%= u.file_field :avatar, :placeholder => "Add a photo " %>
                </label>
            </div>
        </div>

        <div class="row">
            <div class="small-12 medium-6 large-4 columns">
                <label> Location:<br /><small>required</small>
                    <%= u.text_field :location, :placeholder => "Enter your city" %>
                </label>
            </div>
        </div>
        

        <div class="row">
            <div class="small-12 medium-6 large-4 columns">
                <label> Email:<br /><small>required</small>
                    <%= u.text_field :email, :placeholder => "Enter your email" %>
                </label>
               <!--  <small class="error">Please enter your email.</small> -->
            </div>
        </div>
        
        
        <div class="row">
            <div class="small-12 medium-6 large-4 columns">
                <label> <br />
                    <%= u.submit "Finish profile" %>
                </label>
            </div>
        </div>

    <% end %>
</div>


