<body  id="signUpPage">
<!-- class="signUpPage" -->
<h1 class="profileTitle"><strong><u>Paired</u></strong></h1>
<h4 class="profileTag">Learn faster with a pair</h4>

<div class="signUpUser">
    <h4 class="newUser">Sign up!</h4>
    <%= form_for @user do |u| %>
        <div class="row">
            <div class="small-12 medium-6 large-4 columns">
                <label><u>First name: </u><br />
                    <%= u.text_field :first_name, :placeholder => "Enter your first name" %>
                </label>
            </div>
        </div>

       <div class="row">
            <div class="small-12 medium-6 large-4 columns">
                <label><u>Last name: </u><br />
                    <%= u.text_field :last_name, :placeholder => "Enter your last name" %>
                </label>
            </div>

        </div>

        <div class="row">
            <div class="small-12 medium-6 large-4 columns">
                <label><u>Email: </u><br />
                    <%= u.text_field :email, :placeholder => "Enter your email" %>
                </label>
            </div>
        </div>

        <div class="row">
            <div class="small-12 medium-6 large-4 columns">
                <label><u>Password: </u><br />
                    <%= u.password_field :password, :placeholder => "Enter your password" %>
                </label>
            </div>
        </div>

        <div class="row">
            <div class="small-12 medium-6 large-4 columns">
                <label> <br />
                    <%= link_to "Log in", new_auth_path %> |
                    <%= u.submit "Sign up!" %>
                </label>
            </div>
        </div>
    <% end %>
</div>


