<%= render partial: '/layouts/navbar' %>
<h1>Profiles</h1>

<dl class="sub-nav">
  <dt>Filter:</dt>
  <dd class="active"><a href="#">All</a></dd>
  <dd><a href="#">1 stars</a></dd>
  <dd><a href="#">2 stars</a></dd>
  <dd><a href="#">3 stars</a></dd>
</dl>

<% @users.each do |u| %> 
  
  <div>
    <%= u.username %>
    <%= u.email %>
    <%= u.hashed_password %>
  </div>

<% end %> 

<% if current_user %>
<%= link_to_if(current_user, "Log out", auth_path(current_user.id), method: :delete ) %>
<% end %>

<div class="flip-container" ontouchstart="this.classList.toggle('hover');">
  <div class="flipper">
    <div class="front">
      <span class="name">Let's Do This!</span>
    </div>
    <div class="back">
      <div class="back-logo"></div>
      <div class="back-title">Team work!</div>
      <p>We can do this if we work together.</p>
    </div>
  </div>
</div>

