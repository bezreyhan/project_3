<% @users.each do |u| %> 
  
  <div>
    <%= u.username %>
    <%= u.email %>
    <%= u.hashed_password %>
  </div>

<% end %> 
<br />  



<% @users.each do |u| %>
  <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
    <div class="flipper">
        <div class="front">
            <%# @users.each do |u| %>
                <span class="name"><%= u.full_name %></span>
            <%# end %>
        </div>
        <%# @users.each do |u| %>
            <div class="back">
                <div class="back-logo"></div>
                <div class="back-title"><%= u.full_name %></div>
                <p>
                    <%= u.location  %>
                    <br />
                    <%= u.email  %>
                    <br />
                    <%#= u.interests.first.name %> 
                </p>
            </div>
        <%# end %>
    </div>
  </div>
<% end %>

